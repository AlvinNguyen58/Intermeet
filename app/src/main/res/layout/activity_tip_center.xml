<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageQuestion"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/conversation"
            app:layout_constraintBottom_toBottomOf="@id/textMatch"
            app:layout_constraintEnd_toEndOf="@id/textMatch"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@id/textMatch"
            app:layout_constraintTop_toTopOf="@id/textMatch"
            app:layout_constraintVertical_bias="0.943" />


        <TextView
            android:layout_width="67dp"
            android:layout_height="18dp"
            android:text="@string/tipCenter"
            app:layout_constraintBottom_toBottomOf="@+id/textMatch"
            app:layout_constraintEnd_toEndOf="@+id/textMatch"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/textMatch"
            app:layout_constraintTop_toTopOf="@+id/textMatch"
            app:layout_constraintVertical_bias="0.141" />

        <TextView
            android:id="@+id/textMatch"
            android:layout_width="220dp"
            android:layout_height="353dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/big_rectangle"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

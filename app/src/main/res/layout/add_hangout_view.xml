<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hangout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Schedule a hangout"
        android:textSize="25sp"
        android:fontFamily="@font/outfitregular"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/hangout_title" />

    <EditText
        android:id="@+id/hangout_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/hangout_title"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text="Hangout Name" />

    <EditText
        android:id="@+id/hangout_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/hangout_name_text"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text="Hangout Time" />

    <EditText
        android:id="@+id/hangout_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/hangout_time_text"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text="Hangout Location" />

    <EditText
        android:id="@+id/hangout_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/hangout_location_text"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text="Hangout Description" />

    <Button
        android:id="@+id/save_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/hangout_description_text"
        android:layout_centerHorizontal="true"
        android:text="Save Event" />

</RelativeLayout>